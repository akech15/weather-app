<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/time"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="@string/activity_weather_by_time_time"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="start|center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/activity_weather_by_time_icon"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="@string/activity_weather_by_time_temp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="end|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/activity_weather_by_time_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/activity_weather_by_time_icon"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@+id/time"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/temp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        app:srcCompat="@drawable/ic_sun" />
</androidx.constraintlayout.widget.ConstraintLayout>